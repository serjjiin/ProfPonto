<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PontoProf.MainPage">

    <StackLayout Padding="10">
        <Label Text="Cadastro de Professor" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />

        <Label Text="Nome" />
        <Entry x:Name="NomeEntry" />

        <Label Text="Horário"/>
        <TimePicker x:Name="HorarioEntry"/>

        <Label Text="Sala/Aula" />
        <Entry x:Name="SalaEntry" />

        <Button Text="Salvar" Clicked="SalvarButton_Clicked" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
