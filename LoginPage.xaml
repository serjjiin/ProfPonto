<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PontoProf.LoginPage">
    <StackLayout Padding="20">
        <Image Source="logo.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Label Text="DRT" />
        <Entry x:Name="DrtEntry" />
        <Label Text="Senha" />
        <Entry x:Name="SenhaEntry" IsPassword="True" />
        <Button Text="Logar" Clicked="LogarButton_Clicked" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
